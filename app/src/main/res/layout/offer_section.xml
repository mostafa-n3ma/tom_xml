<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/offer_section"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/offer_section_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/ibm_plex_sans_arabic_semibold"
            android:lineHeight="12sp"
            android:text="Buy 1 Tom and get 2 for free"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/ibm_plex_sans_arabic_regular"
            android:text="Adopt Tom! (Free Fail-Free \nGuarantee)"
            android:textColor="@color/light_white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />




    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="132.05dp"
        android:layout_height="110.74dp"
        android:layout_marginEnd="-28dp"
        android:rotation="20"
        android:src="@drawable/store_ellipse2"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />

    <ImageView
        android:layout_width="139.22dp"
        android:layout_height="113.69dp"
        android:layout_marginEnd="-26dp"
        android:rotation="20"
        android:src="@drawable/store_ellipse1"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2" />

    <ImageView
        android:layout_width="115.38dp"
        android:layout_height="108dp"
        android:src="@drawable/store_tom_counting_money"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout2" />
    
</androidx.constraintlayout.widget.ConstraintLayout>
